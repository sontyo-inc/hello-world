<%= form_tag user_sessions_path, class: "form-wrapper", :method => :post do%>
  <h1>Login</h1>
  <div class="form-item">>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="form-item">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="button-panel button">
    <%= submit_tag "Login", :class => "button" %>
  </div>
  <div class="form-footer">
    <%= link_to "新規登録の方はこちら", new_user_path %>
    <!-- <p><a href="#">Forgot password?</a></p> -->
  </div>
<% end %>
